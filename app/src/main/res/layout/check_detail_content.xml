<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/detail_content_margin"
        android:layout_marginRight="@dimen/detail_content_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/checkDetailProductCodeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title1"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/checkDetailProductCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/red"
                android:textStyle="italic"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/checkDetailProductModelsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title2"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/checkDetailProductModels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/red"
                android:textStyle="italic"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/checkDetailModelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title21"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/checkDetailModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/red"
                android:textStyle="italic"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/checkDetailStartPlanDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title18"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/checkDetailStartPlanDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/red"
                android:textStyle="italic"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/inputDetailQuantityTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title10"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/checkDetailQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:inputType="number"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_content_textsize"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title22"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <EditText
                android:id="@+id/checkDetailQuantityPcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:inputType="number"
                android:ems="10"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_content_textsize"
                android:textStyle="italic" />

            <Button
                android:id="@+id/btnCheckModify"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:background="@drawable/list_button_selector"
                android:textColor="@color/teal_700"
                android:textStyle="normal"
                android:focusable="false"
                android:textSize="@dimen/font12"
                android:text="@string/dept_config_save" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title19"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/checkDetailStockId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_content_textsize"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/checkDetailStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_content_textsize"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title20"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/checkDetailPositionId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_content_textsize"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/checkDetailPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_content_textsize"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title27"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/checkDetailDocno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/red"
                android:textSize="@dimen/detail_content_textsize"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />


    </LinearLayout>

</ScrollView>