<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/detail_content_margin"
        android:layout_marginRight="@dimen/detail_content_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subDetailProductCodeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title1"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailProductCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subDetailProductModelsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title2"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailProductModels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subDetailProcessTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title3"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailProcessId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="/"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailProcess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailEmployee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subDetailDeviceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title4"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subDetailLotsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title14"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailLots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subDetailStartPlanDateTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title5"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailStartPlanDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_title_quantity"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subDetailDocnoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title8"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailDocno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailSeq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailSeq1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/subDetailVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>