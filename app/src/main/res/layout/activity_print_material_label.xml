<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrintMaterialLabelActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/printMaterialLabelToolBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@drawable/action_style"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:layout_gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="@dimen/font14"
                    android:textColor="@color/teal_700"
                    android:text="@string/content_title31"
                    android:background="@drawable/textview_bg_gray"/>

                <EditText
                    android:id="@+id/queryProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="@dimen/font14"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:hint="@string/hint_product"
                    android:background="@drawable/textview_bg_gray"
                    android:textColor="@color/master_message" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnQuery"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/button_selector_red"
                    android:focusable="false"
                    android:text="@string/detail_button4"
                    android:textColor="@color/master_loginout"
                    android:textSize="@dimen/list_detail_button"
                    android:textStyle="normal" />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:background="@drawable/list_flag_selector"
                    android:focusable="false"
                    android:layout_marginLeft="10dp"
                    android:text="@string/detail_button7"
                    android:textColor="@color/teal_700"
                    android:textSize="@dimen/list_detail_button"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:background="@color/line"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewBasic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font14"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="@string/content_title1"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnHide"
                            android:layout_width="70dp"
                            android:layout_height="25dp"
                            android:background="@drawable/button_selector_red"
                            android:focusable="false"
                            android:layout_marginRight="5dp"
                            android:text="@string/dialog_hidden"
                            android:textColor="@color/master_loginout"
                            android:textSize="@dimen/list_detail_button"
                            android:textStyle="normal" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:text="@string/print_material_label_textview_title2"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/printMaterialLabelMaterialCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:text="@string/print_material_label_textview_title3"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/printMaterialLabelMaterialName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:text="@string/print_material_label_textview_title4"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/printMaterialLabelMaterialModel"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/printMaterialLabelMaterialSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:text="@string/print_material_label_textview_title5"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/printMaterialLabelProductCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:text="@string/print_material_label_textview_title6"
                        android:textColor="@color/teal_700"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/printMaterialLabelProductName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:text="@string/print_material_label_textview_title7"
                        android:textColor="@color/teal_700"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/printMaterialLabelProductModels"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:text="@string/content_title5"
                        android:background="@drawable/textview_bg_gray"/>

                    <EditText
                        android:id="@+id/printMaterialLabelModQuantity"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:hint="@string/hint_label_quantity"
                        android:ems="4"
                        android:background="@drawable/textview_bg_gray"
                        android:textColor="@color/master_message" />

                    <TextView
                        android:id="@+id/printMaterialLabelQPA"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/printMaterialLabelWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPrinter"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:text="@string/content_title37"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/inputPrintDevice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:gravity="left"
        android:layout_gravity="left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font14"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/content_title30"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPrint"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:background="@drawable/list_flag_selector"
                    android:textColor="@color/teal_700"
                    android:textStyle="normal"
                    android:focusable="false"
                    android:textSize="@dimen/list_detail_button"
                    android:text="@string/list_detail_button18" />

                <Button
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/list_flag_selector"
                    android:textColor="@color/teal_700"
                    android:textStyle="normal"
                    android:focusable="false"
                    android:textSize="@dimen/list_detail_button"
                    android:text="@string/sub_detail_list_cancel" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@drawable/linearlayout_gray_border"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/printMaterialLabelList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:dividerHeight="5dp"
                android:scrollbars="horizontal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>