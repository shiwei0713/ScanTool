<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PositionActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/positionToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_style"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <include
        layout="@layout/check_detail_content"
        android:layout_width="match_parent"
        android:layout_height="350dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:background="@drawable/linearlayout_style_blue"
        android:layout_marginLeft="@dimen/detail_content_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/checkPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/master_loginout"
            android:textStyle="bold"
            android:textSize="@dimen/font50" />

        <Button
            android:id="@+id/btnCheckError"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/list_button_selector"
            android:textColor="@color/teal_700"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/check_stock_error" />

    </LinearLayout>

</LinearLayout>