<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:layout_marginLeft="@dimen/detail_content_margin"
        android:layout_marginRight="@dimen/detail_content_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title1"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/cOrderCheckProductCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title2"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/cOrderCheckProductModels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title28"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/cOrderCheckSaler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title7"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/cOrderCheckQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title8"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/cOrderCheckDocno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/detail_content_height"
            android:gravity="center|left"
            android:layout_marginLeft="@dimen/detail_content_margin"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/detail_content_title29"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

            <TextView
                android:id="@+id/cOrderCheckQrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/detail_content_input_margin"
                android:textColor="@color/list_item_icon"
                android:textSize="@dimen/detail_content_textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>