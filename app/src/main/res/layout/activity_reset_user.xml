<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetUserActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/resetUserToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_style"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/font14"
            android:textColor="@color/teal_700"
            android:text="@string/reset_user_label3"
            android:background="@drawable/textview_bg_gray"/>

        <EditText
            android:id="@+id/oldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/font14"
            android:layout_marginLeft="5dp"
            android:inputType="textPassword"
            android:hint="@string/reset_user_hint1"
            android:background="@drawable/textview_bg_gray"
            android:textColor="@color/teal_700" />

        <ImageButton
            android:id="@+id/showOldPassword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-40dp"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:scaleType="centerInside"
            android:background="#F0F0F0"
            android:src="@drawable/show_password" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/font14"
            android:textColor="@color/teal_700"
            android:text="@string/reset_user_label1"
            android:background="@drawable/textview_bg_gray"/>

        <EditText
            android:id="@+id/newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/font14"
            android:layout_marginLeft="5dp"
            android:inputType="textPassword"
            android:hint="@string/reset_user_hint"
            android:background="@drawable/textview_bg_gray"
            android:textColor="@color/teal_700" />

        <ImageButton
            android:id="@+id/showNewPassword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-40dp"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:scaleType="centerInside"
            android:background="#F0F0F0"
            android:src="@drawable/show_password" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/font14"
            android:textColor="@color/teal_700"
            android:text="@string/reset_user_label2"
            android:background="@drawable/textview_bg_gray"/>

        <EditText
            android:id="@+id/confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="@dimen/font14"
            android:layout_marginLeft="5dp"
            android:inputType="textPassword"
            android:hint="@string/reset_user_hint"
            android:background="@drawable/textview_bg_gray"
            android:textColor="@color/teal_700" />

        <ImageButton
            android:id="@+id/showConfirmPassword"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="-40dp"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:scaleType="centerInside"
            android:background="#F0F0F0"
            android:src="@drawable/show_password" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/button_selector_red"
            android:textColor="@color/master_loginout"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/font12"
            android:text="@string/reset_user_button2" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:background="@drawable/list_flag_selector"
            android:textColor="@color/teal_700"
            android:textStyle="normal"
            android:layout_marginLeft="20dp"
            android:focusable="false"
            android:textSize="@dimen/font12"
            android:text="@string/reset_user_button1" />

    </LinearLayout>

</LinearLayout>