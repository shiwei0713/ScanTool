<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckMaterialActivity"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/checkMaterialToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_style"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginTop="7dp"
            android:gravity="left"
            android:layout_gravity="left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="@dimen/font14"
                    android:textColor="@color/teal_700"
                    android:text="@string/content_title15"
                    android:background="@drawable/textview_bg_gray"/>

                <EditText
                    android:id="@+id/inputMaterialQrcode"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="@dimen/font14"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:hint="@string/hint_material"
                    android:background="@drawable/textview_bg_gray"
                    android:textColor="@color/master_message" />

                <Button
                    android:id="@+id/btnCheckMaterialQrcode"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:background="@drawable/list_flag_selector"
                    android:focusable="false"
                    android:layout_marginLeft="10dp"
                    android:text="@string/detail_button4"
                    android:textColor="@color/teal_700"
                    android:textSize="@dimen/list_detail_button"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/line"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font14"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="@string/content_title1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnHidden"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@drawable/list_flag_selector"
                        android:focusable="false"
                        android:layout_marginRight="20dp"
                        android:text="@string/dialog_hidden"
                        android:textColor="@color/teal_700"
                        android:textSize="@dimen/list_detail_button"
                        android:textStyle="normal" />

                    <Button
                        android:id="@+id/btnShow"
                        android:layout_width="70dp"
                        android:layout_height="25dp"
                        android:background="@drawable/button_selector_red"
                        android:focusable="false"
                        android:layout_marginRight="20dp"
                        android:text="@string/dialog_show"
                        android:textColor="@color/red"
                        android:textSize="@dimen/list_detail_button"
                        android:textStyle="normal" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/viewBasic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:text="@string/product_material_title1"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/checkMaterialProductCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/checkMaterialTotalQty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:text="@string/product_material_title2"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/checkMaterialCurrentProcessId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/checkMaterialCurrentProcess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:text="@string/product_material_title4"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/checkMaterialDevices"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:text="@string/product_material_title3"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/checkMaterialDocno"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                    <TextView
                        android:id="@+id/checkMaterialVersion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="@dimen/font14"
                        android:textColor="@color/teal_700"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/textview_bg_gray"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="@color/line"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font14"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/content_title81"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCheckMaterialPrint"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:background="@drawable/button_selector_red"
                    android:textColor="@color/master_loginout"
                    android:focusable="false"
                    android:text="@string/detail_button6"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="@dimen/list_detail_button"
                    android:textStyle="normal" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@drawable/linearlayout_gray_border"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/materialList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:dividerHeight="2dp"
                android:scrollbars="horizontal" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>