<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubMasterListActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/subMasterQcToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_style"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:id="@+id/toolFlag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnSubMasterListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:text="@string/list_flag_query"/>

        <Button
            android:id="@+id/btnSubMasterQcFlag1"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/list_flag_selector"
            android:textColor="@color/teal_700"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/list_flag1"/>

        <Button
            android:id="@+id/btnSubMasterQcFlag2"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/list_flag_selector"
            android:layout_marginLeft="10dp"
            android:textColor="@color/teal_700"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/list_flag2"/>

        <Button
            android:id="@+id/btnSubMasterQcFlag3"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/list_flag_selector"
            android:layout_marginLeft="10dp"
            android:textColor="@color/teal_700"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/list_flag3"/>

        <Button
            android:id="@+id/btnSubMasterQcFlag4"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/list_flag_selector"
            android:layout_marginLeft="10dp"
            android:textColor="@color/teal_700"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/list_flag4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/query_title_name" />

            <EditText
                android:id="@+id/txtQueryQcName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/query_style"
                android:ems="8"
                android:padding="2dp"
                android:hint="@string/query_hint_name"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black"
                android:inputType=""
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnSubMasterQcQuery"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/list_button_selector"
                android:layout_marginLeft="10dp"
                android:textColor="@color/teal_700"
                android:textStyle="normal"
                android:focusable="false"
                android:textSize="@dimen/list_detail_button"
                android:text="@string/query_button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/query_title_date" />

            <EditText
                android:id="@+id/txtQueryQcbDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/query_style"
                android:padding="2dp"
                android:ems="5"
                android:hint="@string/query_hint_bdate"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black"
                android:inputType="date"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="-"
                android:padding="2dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/txtQueryQceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/query_style"
                android:padding="2dp"
                android:ems="5"
                android:hint="@string/query_hint_edate"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/black"
                android:inputType="date"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/query_label1"
                android:textColor="@color/button_color" />

            <TextView
                android:id="@+id/txtLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/query_label2"
                android:textColor="@color/button_color" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/toolCount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/txtSubListTask1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_number"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtSubListTask2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/master_loginout"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/line"
        android:orientation="vertical">

    </LinearLayout>

    <ProgressBar
        android:id="@+id/subMasterQcProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:max="100"/>

    <ListView
        android:id="@+id/subMasterQcView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/white"
        android:dividerHeight="5dp"
        android:padding="5dp" />

</LinearLayout>