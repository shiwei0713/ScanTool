<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SubMasterContentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/subMasterContentToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_style"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/teal_700"
            android:text="@string/list_flag_query"/>

        <Button
            android:id="@+id/btnMasterFlag1"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/list_flag_selector"
            android:textColor="@color/teal_700"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/sub_master_flag1"/>

        <Button
            android:id="@+id/btnMasterFlag2"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/list_flag_selector"
            android:layout_marginLeft="10dp"
            android:textColor="@color/teal_700"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/sub_master_flag2"/>

        <Button
            android:id="@+id/btnMasterFlag3"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/list_flag_selector"
            android:layout_marginLeft="10dp"
            android:textColor="@color/teal_700"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/sub_master_label1"/>

        <Button
            android:id="@+id/btnMasterFlag4"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:background="@drawable/list_flag_selector"
            android:layout_marginLeft="10dp"
            android:textColor="@color/teal_700"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/sub_master_label2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSubTask1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_number"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/txtSubTask2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/master_loginout"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"
        android:orientation="vertical">

    </LinearLayout>

    <ProgressBar
        android:id="@+id/subMasterContentProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:max="100"/>

    <ListView
        android:id="@+id/subMasterContentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/white"
        android:dividerHeight="5dp"
        android:padding="5dp" />

</LinearLayout>