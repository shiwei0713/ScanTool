<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowMaterial">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/showMaterialToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_style"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/list_item_number"
            android:textStyle="bold"
            android:text="@string/show_material_label1"/>

        <TextView
            android:id="@+id/txtMaterialProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/list_item_number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/list_item_number"
            android:textStyle="bold"
            android:text="@string/show_material_label5"/>

        <TextView
            android:id="@+id/txtMaterialUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/list_item_number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/line"
        android:orientation="vertical">

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMaterialFlag1"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/list_flag_selector"
            android:textColor="@color/teal_700"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/show_material_label2"/>

        <Button
            android:id="@+id/btnMaterialFlag2"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/list_flag_selector"
            android:textColor="@color/teal_700"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/show_material_label3"/>

        <Button
            android:id="@+id/btnMaterialFlag3"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/list_flag_selector"
            android:textColor="@color/teal_700"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"
            android:focusable="false"
            android:textSize="@dimen/list_detail_button"
            android:text="@string/show_material_label4"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textColor="@color/master_loginout"
        android:text="@string/show_material_label6"/>

    <LinearLayout
        android:id="@+id/remote_pdf_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <es.voghdev.pdfviewpager.library.PDFViewPager
            android:id="@+id/pdfViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>